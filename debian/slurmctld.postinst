#!/bin/sh
# postinst script for slurmctld
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#
STARTOPTION="start"
case "$1" in
    configure)
      chown slurm:slurm /var/lib/slurm-llnl
      chown slurm:slurm /var/lib/slurm-llnl/slurmctld
      chown slurm:slurm /var/log/slurm-llnl
      # Remove old wrong rc links
      find /etc/rc?.d -name "*20slurmctld" | xargs rm -f

      # Migrate /var/run/slurm-llnl -> /run/slurm in slurm.conf
      slurm_conf=/etc/qlustar/common/slurm-llnl/slurm.conf
      if [ -e $slurm_conf ]; then
        if grep -q /var/run $slurm_conf; then
          sed -i -e 's,/var/run/slurm-llnl\(.*\.pid\),/run/slurm\1,g' $slurm_conf
        fi
        # Remove obsolete FastSchedule option in slurm.conf
        sed -i -e '/FastSchedule/d' $slurm_conf
      fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
